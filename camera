import cv2

cap = cv2.VideoCapture(1)

while True:
    ret, frame = cap.read()
    h, w = frame.shape[:2]

    # -------- Narrow width crop --------
    narrow_ratio = 0.2   # keep 30% of width (adjust this!)

    new_w = int(w * narrow_ratio)
    x1 = (w - new_w) // 2
    x2 = x1 + new_w

    # crop full height, narrow width
    crop = frame[:, x1:x2]

    cv2.imshow("Tall Narrow FOV", crop)

    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

cap.release()
cv2.destroyAllWindows()
